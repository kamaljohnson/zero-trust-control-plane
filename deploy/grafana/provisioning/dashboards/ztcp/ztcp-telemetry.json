  "panels": [
    {
      "datasource": {
        "type": "loki",
        "uid": "${datasource}"
      },
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 0 },
      "id": 1,
      "options": {
        "showTime": true,
        "showLabels": false,
        "showCommonLabels": false,
        "wrapLogMessage": true,
        "sortOrder": "Descending"
      },
      "targets": [
        {
          "expr": "{job=\"ztcp\"} | json | org_id=~\"$org_id\"",
          "refId": "A"
        }
      ],
      "title": "Telemetry logs",
      "type": "logs"
    },
    {
      "datasource": {
        "type": "loki",
        "uid": "${datasource}"
      },
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 0 },
      "id": 2,
      "options": {},
      "targets": [
        {
          "expr": "sum(rate({job=\"ztcp\"} | json | org_id=~\"$org_id\" | event_type=\"grpc_request\" [$__interval]))",
          "legendFormat": "Requests/s",
          "refId": "A"
        }
      ],
      "title": "gRPC request rate",
      "type": "timeseries"
    },
    {
      "datasource": {
        "type": "loki",
        "uid": "${datasource}"
      },
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 8 },
      "id": 3,
      "options": {},
      "targets": [
        {
          "expr": "sum(rate({job=\"ztcp\"} | json | org_id=~\"$org_id\" | event_type=\"grpc_request\" | status_code!=\"OK\" [$__interval]))",
          "legendFormat": "Errors/s",
          "refId": "A"
        }
      ],
      "title": "gRPC error rate",
      "type": "timeseries"
    },
    {
      "datasource": {
        "type": "loki",
        "uid": "${datasource}"
      },
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 8 },
      "id": 4,
      "options": {},
      "targets": [
        {
          "expr": "sum by (org_id) (rate({job=\"ztcp\"} | json | org_id=~\"$org_id\" [$__interval]))",
          "legendFormat": "{{org_id}}",
          "refId": "A"
        }
      ],
      "title": "Event rate by org",
      "type": "timeseries"
    },
    {
      "datasource": {
        "type": "prometheus",
        "uid": "${datasource_prometheus}"
      },
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 16 },
      "id": 5,
      "options": {},
      "targets": [
        {
          "expr": "up{job=\"otelcol\"}",
          "legendFormat": "otelcol",
          "refId": "A"
        }
      ],
      "title": "Collector up (Prometheus)",
      "type": "timeseries"
    },
    {
      "datasource": {
        "type": "tempo",
        "uid": "${datasource_tempo}"
      },
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 16 },
      "id": 6,
      "options": {},
      "targets": [
        {
          "queryType": "traceIdSearch",
          "refId": "A"
        }
      ],
      "title": "Traces (Tempo)",
      "type": "traces"
    },
    {
      "gridPos": { "h": 3, "w": 24, "x": 0, "y": 24 },
      "id": 7,
      "options": {
        "content": "**Tempo:** Use **Trace ID** or **Service name** search in Explore. TraceQL metrics (e.g. `rate() by(resource.service.name)`) are not supported in local deploy and will show \"empty ring\".",
        "mode": "markdown"
      },
      "title": "Tempo note",
      "type": "text"
    }
  ],
